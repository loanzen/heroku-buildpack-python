# Install dependencies with Pip.
puts-step "Installing dependencies with pip at $REQUIREMENT_FILE"

[ ! "$FRESH_PYTHON" ] && bpwatch start pip_install
[ "$FRESH_PYTHON" ] && bpwatch start pip_install_first

if [ -s .private_packages ]; then
    puts-step "Found Private Packages"
    while read package; do
       /app/.heroku/python/bin/pip install -e $package --src=./.heroku/src --allow-all-external --disable-pip-version-check --no-cache-dir | cleanup | indent
    done < .private_packages
fi

/app/.heroku/python/bin/pip install -r $REQUIREMENT_FILE --exists-action=w --src=./.heroku/src --allow-all-external --disable-pip-version-check --no-cache-dir | cleanup | indent

# Smart Requirements handling
cp requirements.txt .heroku/python/requirements-declared.txt
/app/.heroku/python/bin/pip freeze > .heroku/python/requirements-installed.txt

[ ! "$FRESH_PYTHON" ] && bpwatch stop pip_install
[ "$FRESH_PYTHON" ] && bpwatch stop pip_install_first

echo